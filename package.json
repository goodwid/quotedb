{
  "name": "mike-quotedb",
  "version": "0.1.0",
  "description": "Mike Callahan's movie quote database API",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log,./data --copy-files",
    "start": "node dist",
    "heroku-postbuild": "npm run build",
    "start:watch": "export NODE_ENV=dev; nodemon index.js --exec babel-node --presets babel-preset-env",
    "test": "export TEST=true; mocha --recursive --require babel-register --exit",
    "test:watch": "export TEST=true; mocha --recursive --require babel-register -w --exit",
    "test:int": "export TEST=true; mocha test/integration --require babel-register --exit",
    "test:int:watch": "export TEST=true; mocha -w test/integration --require babel-register --exit",
    "test:unit": "export TEST=true; mocha test/unit --require babel-register --exit",
    "test:unit:watch": "export TEST=true; mocha -w test/unit --require babel-register --exit",
    "pretest": "npm run lint",
    "lint": "eslint **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goodwid/quotedb.git"
  },
  "author": "David Goodwin <goodwid@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goodwid/quotedb/issues"
  },
  "homepage": "https://github.com/goodwid/quotedb#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.9",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.18.2",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.1"
  }
}
